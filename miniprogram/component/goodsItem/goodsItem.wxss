/* component/goodsItem/goodsItem.wxss */

.goods__list_item {
  width: 100%;
  background: #fff;
}

.list__item_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 10rpx;
}

.item__name {
  padding: 10rpx 0 10rpx 10rpx;
  white-space: normal;
}

.avatar {
  display: flex;
  align-items: center;
}

.price {
  color: #ff0036;
  font-weight: 700;
}

.name {
  margin-left: 10rpx;
}

.list__item_content {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.item__image {
  width: 100%;
  height: 100%;
}

.area {
  color: #2d8cf0;
}

.time{
  color: #80848f;
}

.item__price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}
